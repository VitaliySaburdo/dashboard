include ./data/constants.pug

doctype html
html(lang="en")

  //- Head
  include includes/head

  body
    main.main
      section.main__section
        .main__container
          .main__wrapper 
            .sidebar__wrapper
              a.sidebar__logo(href="#")
                svg.sidebar__logo--icon(width="37" height="37")
                  use(href="./images/sprite.svg#icon-logo")
                .sidebar__block  
                  h1.sidebar__title
                    | #{pageTitle}
                  span.sidebar__txt v.01
              .sidebar__box.fade-in
                svg(width="24" height="24")
                  use(href="./images/sprite.svg#icon-key")
                p.sidebar__title--menu #{pageTitle}
              nav.nav.fade-in

                //-Nav-Bar
                include includes/nav-bar

              .user.fade-in
                img.user__img(src="./images/user.png" alt="user")
                .user__box
                  p.user__name #{userName}
                  p.user__title #{userRole}
            .content
              .content__wrapper
                h2.content__title Hello #{userName} 👋🏼,

                //-Mobile-menu 
                .burger-menu__wrapper
                  .burger-menu#burger-menu
                    span
                .mobile-menu#mobile-menu

                  //-Nav-Bar  
                  include includes/nav-bar

                  .user
                    img.user__img(src="./images/user.png" alt="user")
                    .user__box
                      p.user__name #{userName}
                      p.user__title #{userRole}
              .blog
                .blog__header.fade-in
                  .blog__wrapper
                    h3.blog__title All Customers
                    p.blog__title--status Active Members
                  .blog__input--wrapper.fade-in
                    svg.blog__img(width="24" height="24")
                      use(href="./images/sprite.svg#icon-search")
                    input.blog__input(type="text" placeholder="Search")

                //-Table
                include includes/table

                .blog__footer
                  p.blog__txt Showing data 1 to 8 of 256K entries
                  
                    //-Pagination
                    include includes/pagination

                        
                        

